<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/furniture_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Spinner
        android:id="@+id/color_picker"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:backgroundTint="#A3000000"
        android:visibility="visible" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:drawableStart="@drawable/abc_vector_test"
        android:textColor="#FFFFFF"
        android:backgroundTint="#99000000"
        android:layout_margin="12dp"
        android:contentDescription="@string/back_btn_desc"
        android:text="@string/back_btn_content"
        tools:ignore="PrivateResource" />

    <Button
        android:id="@+id/remove_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="16dp"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#99FF0000"
        android:contentDescription="@string/remove_btn_desc"
        android:text="@string/remove_btn_content" />


</FrameLayout>


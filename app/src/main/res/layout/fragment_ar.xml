<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/furniture_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:layout_margin="4dp"
            android:backgroundTint="@color/blackGlass"
            android:contentDescription="@string/back_btn_desc"
            android:drawableStart="@drawable/abc_vector_test"
            android:text="@string/back_btn_content"
            android:textColor="@color/white"
            tools:ignore="PrivateResource" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="4dp"
            android:text="@string/item_name"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:background="@color/blackGlass"
        android:orientation="vertical">

        <ListView
            android:id="@+id/color_picker_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent" />

    </LinearLayout>


    <Button
        android:id="@+id/remove_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="#99FF0000"
        android:contentDescription="@string/remove_btn_desc"
        android:text="@string/remove_btn_content"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:visibility="gone" />


</FrameLayout>

